{
  "compilerOptions": {
		"baseUrl": ".",
    "declaration": true,
    "target": "ESNext",
    "lib": ["ES2023"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
		"paths": {
			"@/*": ["src/*"]
		}
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "dist"]
}